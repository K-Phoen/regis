{% extends '::layout.html.twig' %}

{% import '::utils.html.twig' as utils %}

{% block content %}
<h1 class="page-header">Repositories</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Repository</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for repo in repositories %}
            <tr>
                <td>
                    <span class="label label-primary">{{ utils.repository_type(repo) }}</span>
                    <a href="{{ path('repositories_detail', {identifier: repo.identifier}) }}">{{ repo.identifier }}</a>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="{{ path('repositories_edit', {identifier: repo.identifier}) }}" class="btn btn-default">
                            <i class="glyphicon glyphicon-pencil"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>

        <tfoot>
            <tr>
                <td colspan="2"><a href="{{ path('repositories_new') }}" class="btn btn-primary">Add new</a></td>
            </tr>
        </tfoot>
    </table>
</div>
{% endblock %}